<h1 class="text-3xl font-bold text-gray-800 mb-6">Gerenciar Palavras-chave</h1>

<div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-2xl font-semibold mb-4">{{#if palavraChaveEmEdicao}}Editar{{else}}Cadastrar Nova{{/if}} Palavra-chave</h2>
    
    <form action="/admin/palavras-chave{{#if palavraChaveEmEdicao}}/edit/{{palavraChaveEmEdicao.id}}{{/if}}" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="nome" class="block text-sm font-medium text-gray-700">Nome da Palavra-chave</label>
                <input type="text" name="nome" id="nome" value="{{palavraChaveEmEdicao.nome}}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" required>
            </div>
        </div>
        <div class="mt-4 flex items-center gap-4">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                {{#if palavraChaveEmEdicao}}Salvar Alterações{{else}}Cadastrar{{/if}}
            </button>
            {{#if palavraChaveEmEdicao}}
            <a href="/admin/palavras-chave" class="text-gray-600 hover:text-gray-900">Cancelar Edição</a>
            {{/if}}
        </div>
    </form>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Palavras-chave Cadastradas</h2>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {{#each palavrasChave}}
                <tr>
                    <td class="px-6 py-4 text-sm text-gray-500">{{this.id}}</td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">{{this.nome}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a href="/admin/palavras-chave/edit/{{this.id}}" class="text-indigo-600 hover:text-indigo-900 mr-4">Editar</a>
                        <form action="/admin/palavras-chave/delete/{{this.id}}" method="POST" class="inline" onsubmit="return confirm('Tem certeza?');">
                            <button type="submit" class="text-red-600 hover:text-red-900">Excluir</button>
                        </form>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="3" class="px-6 py-4 text-center text-gray-500">Nenhuma palavra-chave cadastrada.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
