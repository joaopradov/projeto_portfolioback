<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-4">Projetos dos Alunos</h1>

    <div class="mb-10 text-center">
        <p class="text-lg text-gray-600 mb-3">Filtre por palavra-chave:</p>
        <div class="flex justify-center flex-wrap gap-2">
            <a href="/projetos" class="px-4 py-2 rounded-full text-sm font-semibold transition-colors duration-300
                {{#unless filtroAtivo}} bg-blue-500 text-white {{else}} bg-gray-200 text-gray-700 hover:bg-gray-300 {{/unless}}">
                Todos
            </a>
            {{#each todasPalavrasChave}}
            <a href="/projetos?palavra_chave_id={{this.id}}" class="px-4 py-2 rounded-full text-sm font-semibold transition-colors duration-300
                {{#if (eq this.id ../filtroAtivo.id)}} bg-blue-500 text-white {{else}} bg-gray-200 text-gray-700 hover:bg-gray-300 {{/if}}">
                {{this.nome}}
            </a>
            {{/each}}
        </div>
        {{#if filtroAtivo}}
        <p class="mt-4 text-md text-gray-800">Mostrando projetos com a palavra-chave: <span class="font-bold">{{filtroAtivo.nome}}</span></p>
        {{/if}}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {{#each projetos}}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300">
            <div class="p-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">{{this.nome}}</h2>
                <p class="text-gray-600 mb-4 h-24 overflow-hidden">{{this.resumo}}</p>
                <div class="mb-4">
                    <h4 class="font-semibold">Desenvolvido por:</h4>
                    <ul class="text-sm text-gray-600">
                        {{#each this.desenvolvedores}}
                        <li>{{this.nome_completo}}</li>
                        {{/each}}
                    </ul>
                </div>
                <a href="{{this.link_externo}}" target="_blank" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Ver Detalhes &rarr;
                </a>
            </div>
        </div>
        {{else}}
        <p class="col-span-full text-center text-gray-500 text-lg">Nenhum projeto encontrado com este filtro.</p>
        {{/each}}
    </div>
</div>
